{
    "manifest_json": 2,
    "name": "Domain Checker Extension",
    "version": "1.0",
    "description": "Check if domain is available.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]
}